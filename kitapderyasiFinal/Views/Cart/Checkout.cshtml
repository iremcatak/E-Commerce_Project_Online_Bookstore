@model kitapderyasiFinal.Models.ShippingDetails
@{
    ViewBag.Title = "Checkout";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div id="sidebar" class="span3">
        <div class="well well-small">
            <ul class="nav nav-list">
                @Html.Action("_CategoryList", "Category")
                <li style="border:0"> &nbsp;</li>
                @Html.Action("Summary", "Cart")
            </ul>
        </div>


        @Html.Action("_FeaturedProductList", "Home")

    </div>
    <div class="span9">
        <ul class="breadcrumb">
            <li><a href="/Home/Index">Anasayfa</a> <span class="divider">/</span></li>
            <li class="active">Sipariş Formu</li>
        </ul>

        <hr class="soft" />
        <div class="well">
            @using (Html.BeginForm("Checkout", "Cart", FormMethod.Post, new { @class = "form-horizontal" }))
            {
                <h3>Adres Bilgileri</h3>

                <div class="control-group">
                    <label class="control-label" for="inputFname">Kullanıcı Adı <sup>*</sup></label>
                    <div class="controls">
                       <div class="btn btn-success">@User.Identity.Name</div>
                    </div>
                </div>
                <div class="control-group">
                    <label class="control-label" for="inputLname">Adres Başlığı (Ev / iş...)<sup>*</sup></label>
                    <div class="controls">
                        @Html.EditorFor(model => model.Address, new { htmlAttributes = new { @class = "form-control", @style = "max-width:35%" } })
                        @Html.ValidationMessageFor(model => model.Address, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="control-group">
                    <label class="control-label" for="inputLname">Şehir<sup>*</sup></label>
                    <div class="controls">
                        @Html.EditorFor(model => model.Sehir, new { htmlAttributes = new { @class = "form-control", @style = "max-width:35%" } })
                        @Html.ValidationMessageFor(model => model.Sehir, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="control-group">
                    <label class="control-label" for="inputEmail">İlçe <sup>*</sup></label>
                    <div class="controls">
                        @Html.EditorFor(model => model.Semt, new { htmlAttributes = new { @class = "form-control", @style = "max-width:35%" } })
                        @Html.ValidationMessageFor(model => model.Semt, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="control-group">
                    <label class="control-label">Mahalle <sup>*</sup></label>
                    <div class="controls">
                        @Html.EditorFor(model => model.Mahalle, new { htmlAttributes = new { @class = "form-control", @style = "max-width:35%" } })
                        @Html.ValidationMessageFor(model => model.Mahalle, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="control-group">
                    <label class="control-label">Posta Kodu<sup>*</sup></label>
                    <div class="controls">
                        @Html.EditorFor(model => model.Postakodu, new { htmlAttributes = new { @class = "form-control", @style = "max-width:35%" } })
                        @Html.ValidationMessageFor(model => model.Postakodu, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="control-group">
                    <div class="controls">
                        <input type="submit" name="submitAccount" value=" Siparişi Tamamla " class="exclusive shopBtn" style="background-color: #65a1b9">
                    </div>
                </div>
            }
        </div>


    </div>
</div>
