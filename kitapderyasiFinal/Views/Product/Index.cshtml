@model IEnumerable<kitapderyasiFinal.Entity.Product>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<section class="content">
    <div class="row">
        <div class="col-xs-12">


            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">Ürün Listesi</h3>
                </div><!-- /.box-header -->
                <br />
                <a class="btn btn-primary btn-block" href="@Url.Action("Create")">Yeni Kayıt</a>

                <div class="box-body">
                    <table id="example1" class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>Resim</th>
                                @*<th>Kategori Adı</th>*@
                                <th>Ürün Adı</th>
                                <th>Yazar</th>
                                <th>Marka</th>
                                <th>Açıklama</th>
                                <th>Fiyat</th>
                                <th>Renk</th>
                                <th>Stok</th>
                                <th>Onaylı</th>
                                <th>Anasayfa</th>
                                <th>Popüler</th>
                                <th>Slayt</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td><img src="~/Content/image/@item.Image" width="80" height="60" /></td>
                                    @*<td>@item.category.Name</td>*@
                                    <td>@item.Name</td>
                                    <td>@item.Writer</td>
                                    <td>@item.Brand</td>
                                    <td>@item.Description</td>
                                    <td>@item.Price</td>
                                    <td>@item.Colour</td>
                                    <td>@item.Stock</td>
                                    <td>
                                        @if (item.IsApproved)
                                        {<label class="label label-success"><i class="fa fa-fw fa-check-circle-o"></i> Evet</label>}
                                        else
                                        { <label class="label label-danger"><i class="fa fa-times-circle"></i> Hayır</label>}
                                    </td>
                                    <td>

                                        @if (item.IsHome)
                                        {<label class="label label-success"><i class="fa fa-fw fa-check-circle-o"></i> Evet</label>}
                                        else
                                        { <label class="label label-danger"><i class="fa fa-times-circle"></i> Hayır</label>}
                                    </td>
                                    <td>

                                        @if (item.IsFeatured)
                                        {<label class="label label-success"><i class="fa fa-fw fa-check-circle-o"></i> Evet</label>}
                                        else
                                        { <label class="label label-danger"><i class="fa fa-times-circle"></i> Hayır</label>}
                                    </td>
                                    <td>

                                        @if (item.Slider)
                                        {<label class="label label-success"><i class="fa fa-fw fa-check-circle-o"></i> Evet</label>}
                                        else
                                        { <label class="label label-danger"><i class="fa fa-times-circle"></i> Hayır</label>}
                                    </td>
                                    <td>
                                        <a class="btn btn-primary" href="@Url.Action("Edit",new {id=item.Id})"> <i class="fa fa-fw fa-edit"></i> Düzenle</a>
                                        <a class="btn btn-danger" href="@Url.Action("Delete",new {id=item.Id})"><i class="fa fa-fw fa-trash-o"></i>Sil</a>
                                    </td>
                                </tr>
                            }

                        </tbody>
                        <tfoot>
                            <tr>
                            <tr>
                                <th>Resim</th>
                                @*<th>Kategori Adı</th>*@
                                <th>Ürün Adı</th>
                                <th>Yazar</th>
                                <th>Marka</th>
                                <th>Açıklama</th>
                                <th>Fiyat</th>
                                <th>Renk</th>
                                <th>Stok</th>
                                <th>Onaylı</th>
                                <th>Anasayfa</th>
                                <th>Popüler</th>
                                <th>Slayt</th>
                                <th></th>
                            </tr>
                        </tfoot>
                    </table>
                </div><!-- /.box-body -->
            </div><!-- /.box -->
        </div><!-- /.col -->
    </div><!-- /.row -->
</section>

