@model kitapderyasiFinal.Models.UserProfile
@{
    ViewBag.Title = "UserProfile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div id="sidebar" class="span3">
        <div class="well well-small">
            <ul class="nav nav-list">
                @Html.Action("_CategoryList", "Category")
                <li style="border:0"> &nbsp;</li>
                @Html.Action("Summary", "Cart")
            </ul>
        </div>


        @Html.Action("_FeaturedProductList", "Home")

    </div>
    <div class="span9">
        <ul class="breadcrumb">
            <li><a href="/Home/Index">Anasayfa</a> <span class="divider">/</span></li>
            <li class="active">Kullanıcı Bilgileri</li>
        </ul>

        <hr class="soft" />
        <div class="well">
            @using (Html.BeginForm("UserProfile", "Account", FormMethod.Post, new { @class = "form-horizontal" }))
            {
                <h3>Bilgileri Güncelle</h3>
                @Html.AntiForgeryToken()
                @Html.HiddenFor(model => model.id)

                <div class="control-group">
                    <label class="control-label" for="inputFname">Ad <sup>*</sup></label>
                    <div class="controls">
                        @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", @style = "max-width:35%" } })
                        @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="control-group">
                    <label class="control-label" for="inputLname">Soyad <sup>*</sup></label>
                    <div class="controls">
                        @Html.EditorFor(model => model.Surname, new { htmlAttributes = new { @class = "form-control", @style = "max-width:35%" } })
                        @Html.ValidationMessageFor(model => model.Surname, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="control-group">
                    <label class="control-label" for="inputLname">Kullanıcı Adı <sup>*</sup></label>
                    <div class="controls">
                        @Html.EditorFor(model => model.Username, new { htmlAttributes = new { @class = "form-control", @style = "max-width:35%" } })
                        @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="control-group">
                    <label class="control-label" for="inputEmail">Email <sup>*</sup></label>
                    <div class="controls">
                        @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control", @style = "max-width:35%" } })
                        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="control-group">
                    <div class="controls">
                        <input type="submit" name="submitAccount" value="Güncelle" class="exclusive shopBtn" style="background-color: #65a1b9">
                        <a href="/Account/ChangePassword">Şifreyi değiştir</a>
                    </div>
                </div>
            }
        </div>


    </div>
</div>
