@using kitapderyasiFinal.Entity
@model IEnumerable<Product>


<div id="myCarousel" class="carousel slide homCar">
    <div class="carousel-inner">

        <div class="item active">
            <img style="width:100%" src="~/Content/image/kitapderyasilogo.jpg" alt="bootstrap templates">
            <div class="carousel-caption">
                <h4></h4>
                <p><span>kitapderyasi.com</span></p>
            </div>
        </div>
        @foreach (var item in Model)
        {
            <div class="item">
                <a href="/Home/ProductDetails/@item.Id"> <img style="width:100% ;max-width:698px;max-height:327px;min-width:698px;min-height:327px" src="~/Content/image/@item.Image" alt="@item.Name"></a>
                <div class="carousel-caption">
                    <h4>@item.Name</h4>
                    <p><span>@item.Price ₺</span></p>
                </div>
            </div>
        }
    </div>
    <a class="left carousel-control" href="#myCarousel" data-slide="prev">‹</a>
    <a class="right carousel-control" href="#myCarousel" data-slide="next">›</a>
</div>